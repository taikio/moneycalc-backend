    {
      "version": "0.2.0",
      "configurations": [{
          "name": "Launch localhost with sourcemaps",
          "type": "chrome",
          "request": "launch",
          "url": "http://localhost:4200",
          "sourceMaps": true,
          "webRoot": "${workspaceRoot}"
        },
        {
          "type": "chrome",
          "request": "attach",
          "name": "Attach to Chrome",
          "port": 9222,
          "sourceMaps": true,
          "urlFilter": "http://localhost:4200/*",
          "webRoot": "${workspaceFolder}",
          "userDataDir": true
        }
      ]
    }
